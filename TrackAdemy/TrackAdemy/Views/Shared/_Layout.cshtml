                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbare-nav">
                        <li style="float:left">
                            <a href="~/Home/Index">
                                <img class="img-responsive" src="~/Content/images/SVG/Trackademy_White.svg" style="max-width:100%">____________________</a>
                        </li>
                        <li><a href="~/Home/Index">Log Out</a></li>
                        <li><a href="~/Student/Aspirations">Aspirations</a></li>
                        <li><a href="~/Student/Store">Pet Store</a></li>
                        <li><a href="~/Student/Yard">Pet Yard</a></li>
                        <li><a href="~/Student/Index">HOME PAGE</a></li>
                    </ul>
                </div>
            </div>
        </div>
        }
        @*TrackAdemy home*@
        else if (controllerName == "Home")
