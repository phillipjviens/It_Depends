<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        a {
            color: white;
            float: right;
        }
        li a {
            display: inline;
            padding: 10px;
            text-align: center;
        }
        </style>

</head>
<body>
    @{
