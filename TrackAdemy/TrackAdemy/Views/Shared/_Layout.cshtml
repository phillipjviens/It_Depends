                        <li><a href="~/Admin/ModifyStudent">Modify Student</a></li>
                        <li><a href="~/Admin/Index">HOME PAGE</a></li>
                    </ul>
                </div>
            </div>
        </div>
        }
        @*Student nav*@
        else if(controllerName == "Student")
        {
        <div id="studentNav" class="navbar navbar-inverse navbar-fixed-top" style="background:linear-gradient(to right, #37499F,#3D92D0);">
