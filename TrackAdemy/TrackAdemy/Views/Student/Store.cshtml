@{
    ViewBag.Title = "Pet Store"; 
}
<body class ="backgroundStore">
    <div class="topStoreRow">
        <div class="col-sm-offset-2 col-xs-1" >
            <h1 class="subheader"><br />356<br /><img src="~/Content/images/SVG/Trackoin_Pile.svg" alt="Pet" /></h1>
        </div>
        <div class="col-xs-3">
            <img src="~/Content/images/SVG/Pet_Home.svg" alt="Pet" />
        </div>
        <div class="col-xs-3">
            <div class="speech-bubble">
                <h2>Look at all this great stuff!</h2>
                <h3>I've had my eye on this for awhile:</h3>
                <img src="~/Content/images/SVG/Store_DogBed.svg" alt="Dogbed" />
            </div>
        </div>
    </div>
    <!--store container-->
    <div class="containerStore">
        <div>
            <!--1st item-->
            <div class="containerSmallerStore">
                <div class="item1">
                    <!--first time pic-->
                    <img src="~/Content/images/SVG/Store_Collar.svg" alt="Collar" />
                </div>
                <div>
                    <!--buy button-->
                    <btn class="buyButton">BUY!</btn>
                </div>
                <div></div>
                <div></div>
                <div>
                    <!--price-->
                    <text class="storeText">200</text>
                </div>
            </div>
        </div>
        <div>
            <!--2nd item-->
            <div class="containerSmallerStore">
                <div class="item1">
                    <!--first time pic-->
                    <img src="~/Content/images/SVG/Store_CowboyHat.svg" alt="Cowboy Hat" />
                </div>
                <div>
                    <!--buy button-->
                    <btn class="buyButton" >BUY!</btn>
                </div>
                <div></div><!--space-->
                <div></div>
                <div>
                    <!--price-->
                    <text class="storeText">150</text>
                </div>
            </div>
        </div>
        <div>
            <!--3rd item-->
            <div class="containerSmallerStore">
                <div class="item1">
                    <!--first time pic-->
                    <img src="~/Content/images/SVG/Store_Mustache.svg" alt="Mustache" />
                </div>
                <div>
                    <!--buy button-->
                    <btn class="buyButton">BUY!</btn>
                </div>
                <div></div><!--space-->
                <div></div>
                <div>
                    <!--price-->
                    <text class="storeText storeButtons">1100</text>
                </div>
            </div>
        </div>
        <div>
            <!--4th item-->
            <div class="containerSmallerStore">
                <div class="item1">
                    <!--first time pic-->
                    <img src="~/Content/images/SVG/Store_Handkerchief_Dark.svg" alt="Handkerchief" />
                </div>
                <div>
                    <!--buy button-->
                    <button class ="unbuyable" disabled>Owned!</button>
                </div>
                <div></div>
                <div></div>
                <div>
                    <!--price-->
                    <text class="storeText"></text>
                </div>
            </div>
        </div>
        <div>
            <!--5th item-->
            <div class="containerSmallerStore">
                <div class="item1">
                    <!--first time pic-->
                    <img src="~/Content/images/SVG/Store_Ball.svg" alt="Ball" />
                </div>
                <div>
                    <!--buy button-->
                    <btn class="unbuyable" disabled>Sold out!</btn>
                </div>
                <div></div><!--space-->
                <div></div>
                <div>
                    <!--price-->
                    <text class="storeText"></text>
                </div>
            </div>
        </div>
        <div>
            <!--6th item-->
            <div class="containerSmallerStore">
                <div class="item1">
                    <!--first time pic-->
                    <img src="~/Content/images/SVG/Store_DogBed.svg" alt="Dog Bed" />
                </div>
                <div>
                    <!--buy button-->
                    <a href="~/Student/YardUpdated" class="buyButton">BUY!</a>
                </div>
                <div></div><!--space-->
                <div></div>
                <div>
                    <!--price-->
                    <text class="storeText">350</text>
                </div>
            </div>
        </div>
    </div> <!--end grid container-->




</body>