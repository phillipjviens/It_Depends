@{
    ViewBag.Title = "Aspirations";
}

<body style="background-color:#FFFFFF;">
    <div class="center" style="margin:10; padding: 10;">
        <body class="AspirationBackground" style="margin: 10; padding: 10;">
    </div>

    <div>
        <div class="grid-container" style="position:relative; top: 50%;">

            <p style="color:#FFFFFF; font-size:40px; font-family:'Century Gothic'; text-align:center"> TODAY'S ASPIRATION </p>

            <div class="item1">
                <img id="clockIn" src="~/Content/images/SVG/Aspiration_ClockIn.svg" />
                <p style="color:#FFFFFF; font-size:12px; text-align:center">Clock In</p>

            </div>
            <div class="item2">
                <img src="~/Content/images/SVG/Aspiration_ClockOut_Dark.svg" />
                <p style="color:#3D92D0; font-size:12px; text-align:center">Clock Out</p>
                <button onclick="clockOut()" class="btn">Clock Out</button>
            </div>

            <div class="item3">
                <img src="~/Content/images/SVG/Aspiration_StayAllDay_Dark.svg" />
                <p style="color:#3D92D0; font-size:12px; text-align:center">Stay All Day</p>
                <button onclick="StayAllDay()" class="btn">StayAllDay</button>
            </div>


            <p style="color:#FFFFFF; font-size:40px; font-family:'Century Gothic'; text-align:left"> FUTURE'S ASPIRATION </p>


            <div class="item4">
                <img src="~/Content/images/SVG/Aspiration_Streak_Dark.svg" />
                <p style="color:#3D92D0; font-size:12px; text-align:center">28 DAYS STREAK</p>
                <button onclick="28DaysStreak();" class="btn">28DaysStreak</button>
            </div>

            <div class="item5">
                <img src="~/Content/images/SVG/Aspiration_ClockOut_3_Dark.svg" />
                <p style="color:#3D92D0; font-size:12px; text-align:center"> 3 DAYS IN A ROW </p>
                <button onclick="StayAllDay()" class="btn">StayAllDay</button>
            </div>

            <div class="item6">
                <img src="~/Content/images/SVG/Aspiration_300Hours_Dark.svg" />
                <p style="color:#3D92D0; font-size:12px; text-align:center">300 COMMUNITY HOURS </p>
                <button onclick="300CommunityHours()" class="btn">300 Community Hours</button>
            </div>



            <p style="color:#FFFFFF; font-size:40px; font-family:'Century Gothic'; text-align:center"> Dexter's Wishlist </p>

            <div class="item7">
                <img src="~/Content/images/SVG/Store_Speak.svg" />
                <p style="color:#3D92D0; font-size:12px; text-align:center"> LEARN SPEAK </p>
                <button onclick="LearnSpeak()" class="btn">Learn Speak</button>
            </div>

            <div class="item8">
                <img src="~/Content/images/SVG/Store_Handkerchief_Dark.svg" />
                <p style="color:#3D92D0; font-size:10px; text-align:center">HANDKARECHIEF</p>
                <button onclick="Handkrachief()" class="btn">HANDKARECHIEF</button>
            </div>


            <div class="item9">
                <img src="~/Content/images/SVG/Store_CowboyHat_Dark.svg" />
                <p style="color:#3D92D0; font-size:12px; text-align:center">COWBOY HAT </p>
                <button onclick="CowboyHat()" class="btn">Cowboy Hat</button>
            </div>

        </div>
</body>
