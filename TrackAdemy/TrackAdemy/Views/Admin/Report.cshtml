@{
    if(ViewData["student"] != "Select a Student")
    {
        <div id="reportStudentTime">
            <ul class="nav nav-pills">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">@ViewData["Title"]<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <div class="btn-group btn-group-justified">
                            <li>@Html.ActionLink("Last Week", "Report", "Admin", new{student = ViewData["student"], date=ViewData["LastWeek"]}, new { @class = "btn btn-primary" })</li>
