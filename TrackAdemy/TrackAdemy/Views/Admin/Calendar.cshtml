@{
    ViewBag.Title = "Calendar";
}

<!--Admin Calendar Mockup-->

<body>
    <div id="adminLeft"></div>
    <div id="adminRight"></div>
    <div id="adminTop"></div>
    <div id="adminBottom"></div>

    <div class="calContain">
        <img class="calPic" src="~/Content/images/SVG/ChartSVG/Admin_Calendar.svg" />
        <button class="invisButton" onclick="showBoxes()">This button.</button>
        <div id="hiddenBox">
            <label for="date"> Date to adjust: </label>
            <input type="date" name="date" placeholder="11/07/17" />
            <label for="hours"> Set new hours: </label>
            <input type="text" name="hours" placeholder="9" />

            <a href="~/Admin/_CalendarUpdate">Apply Changes</a>
        </div>
    </div>


</body>


<!--toggles visibility of editing boxes-->
<script>
    function showBoxes() {
        var x = document.getElementById("hiddenBox");
        if (x.style.display == 'block') {
            x.style.display = 'none';
        } else {
            x.style.display = 'block';
        }
    }

</script>

